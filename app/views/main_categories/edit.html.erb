<%= form_for MainCategory.find(params[:id]), :url => {:controller => 'main_categories', :action => 'update',  :method => 'post'} do |f| %>
<%= f.label :title%>
<%= f.text_field :title, class: 'form-control', placeholder: '' %>
<%= f.label :body %>
<%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "Enter post body" %>
<%= f.submit "Save", class: 'btn btn-success' %>

<%end%>

<button><%= link_to 'Add Pic', new_main_category_main_category_pic_path(params[:id])%></button>




