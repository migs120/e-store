<% @item = Item.find(params[:id])%>
<h3><%= link_to 'Back to Category Items', main_category_items_path(@item.main_category_id) %><h3>

<h3><%= @item.title %></h3>
<p><%= @item.body %></p>
<%if @item.item_pics.any?%>
<%@item.item_pics.each do |pic|%>
<img src="<%= pic.pic_url_url%>" style="height:150px; width:150px;">
  
<% end%>
<%end %>
<br><br><br><br><button><%= link_to 'ADD Pictures to Item', new_main_category_item_item_pic_path(params[:main_category_id], params[:id]) %></button>
 <br><button><%= link_to "Edit Item", edit_main_category_item_path(@item.main_category_id, @item.id) %></button>