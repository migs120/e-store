<% @items = MainCategory.find(params[:main_category_id]).items%>
<h3><%= link_to "Back to Categorys", root_path%><h3>
<% @items.each do |item|%>

  <h4><%= link_to item.title, main_category_item_path(item.main_category_id, item.id)  %></h4>
  <p><%= item.body %></p>
  <% if item.item_pics.any?%>
<img src="<%= item.item_pics.first.pic_url.url%>" style='height:100px; width:100px;'>

    <%end%>
  <br><button><%= link_to "Add Pics", new_main_category_item_item_pic_path(item.main_category_id, item.id)%></button>
  <br><button><%= link_to "Edit Item", edit_main_category_item_path(params[:main_category_id], item.id) %></button>

<%end%>

<br><br><button><%= link_to "Add Item", new_main_category_item_path(params[:main_category_id]) %></button>